options{
        directory "/etc/bind";
        dnssec-validation auto;
        
        //acl autoriser pour le serveur DNS
        acl "interne" { 192.168.0.0/24; };
	
        allow-recursion {
		interne;
	};

	// Configure the IPs to listen on here.
	listen-on { any; };
	listen-on-v6 { none; };
        listen-on port 53 { any; };

	pid-file "/var/run/named/named.pid";
	allow-transfer { none; };
	allow-query { interne; };
	version "Unknown";
};

        
}
